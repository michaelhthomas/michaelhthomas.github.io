---
import { Icon } from 'astro-icon/components';
import MLink from './MLink.vue';
import Social from './Social.astro';

const year = new Date().getFullYear();
---

<footer
  class="bg-true-gray-50 dark:bg-true-gray-800 border-primary-600 dark:border-true-gray-700 border-b-8"
>
  <div class="wrapper mx-auto mt-24 px-5">
    <div class="md:py-5">
      <div
        class="mt-6 flex flex-col items-center justify-between md:mt-0 md:flex-row"
      >
        <div class="logo flex items-center">
          <div
            class="text-true-gray-700 dark:text-true-gray-200 mx-1 mt-5 text-center text-sm sm:mt-0 sm:text-left"
          >
            <p class="font-bold">Â© {year} Michael Thomas</p>
            <p>
              Built with
              <Icon
                name="noto:red-heart"
                class="inline"
              />
              and
              <MLink
                aria-label="michaelt.xyz"
                blank
                class="text-true-gray-700 dark:text-true-gray-200 text-sm underline"
                href="https://github.com/michaelhthomas/michaelhthomas.github.io"
              >
                available on GitHub
              </MLink>
            </p>
          </div>
        </div>

        <div>
          <Social />
        </div>
      </div>
    </div>
  </div>
</footer>
