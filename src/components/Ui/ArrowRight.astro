---
interface Props {
  class: string;
}

const { class: className } = Astro.props;

const uuid = crypto.randomUUID();
---

<svg class:list={['overflow-visible h-4', className]}>
  <defs>
    <marker
      id={`${uuid}-m`}
      markerWidth="2"
      markerHeight="4"
      refX="1"
      refY="1"
      viewBox="0 0 1 2"
      class="overflow-visible"
    >
      <path
        d="M 0 0 L 1 1 L 0 2"
        fill="transparent"
        stroke="currentcolor"
        stroke-width="0.5"
        stroke-linecap="round"
        stroke-linejoin="round"
      ></path>
    </marker>
  </defs>
  <line
    x1="0"
    y1="50%"
    x2="100%"
    y2="50%"
    stroke-width="2"
    stroke-linecap="round"
    marker-end={`url(#${uuid}-m)`}
    stroke="currentcolor"
  ></line>
</svg>
