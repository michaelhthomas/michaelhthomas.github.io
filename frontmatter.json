{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "other",
  "frontMatter.content.publicFolder": "",
  "frontMatter.preview.host": "http://localhost:8080",
  "frontMatter.content.pageFolders": [
    {
      "title": "posts",
      "path": "[[workspace]]/content/posts"
    },
    {
      "title": "pages",
      "path": "[[workspace]]/content/pages"
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "post",
      "pageBundle": true,
      "previewPath": "/blog/",
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Slug",
          "name": "slug",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Date Published",
          "name": "date_published",
          "type": "datetime"
        },
        {
          "title": "Date Updated",
          "name": "date_updated",
          "type": "datetime"
        },
        {
          "title": "Cover Image",
          "name": "cover_image",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        }
      ]
    },
    {
      "name": "page",
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Slug",
          "name": "slug",
          "type": "string"
        }
      ]
    }
  ]
}
