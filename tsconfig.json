{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["*"],
      "@/*": ["components/*"]
    },
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src/**/*.vue", "src/**/*.ts", "src/**/*.js"],
  "vueCompilerOptions": {
    "target": 2.7
  }
}
